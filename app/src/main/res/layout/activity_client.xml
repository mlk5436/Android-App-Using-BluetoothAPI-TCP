<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meng.deviceprocessor.Client">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check on the device to connect: "
        android:id="@+id/status"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clientStatus"
        android:layout_toRightOf="@id/status"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:layout_below="@id/clientStatus"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please input the Vector to Send: "
        android:id="@+id/InputData"
        android:layout_below="@id/listview"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataStatus"
        android:layout_toRightOf="@id/InputData"
        android:layout_below="@id/listview"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:id="@+id/x"
        android:layout_below="@id/InputData"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:id="@+id/y"
        android:layout_below="@id/InputData"
        android:layout_toRightOf="@id/x"
        />
    <EditText
        android:layout_width="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:layout_height="wrap_content"
        android:id="@+id/z"
        android:layout_below="@id/InputData"
        android:layout_toRightOf="@id/y"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:text="Send"
        android:layout_below="@id/x"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closeSocket"
        android:text="Close Connection"
        android:layout_marginRight="50px"
        android:layout_below="@id/x"
        android:layout_toRightOf="@id/send"
        />
</RelativeLayout>
